{
  "dxt_version": "0.1",
  "name": "quickchart",
  "display_name": "Quickchart",
  "version": "1.0.0",
  "description": "A Model Context Protocol server for generating charts using QuickChart.io",
  "long_description": "",
  "author": {
    "name": "GongRzhe"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GongRzhe/Quickchart-MCP-Server"
  },
  "homepage": "https://github.com/GongRzhe/Quickchart-MCP-Server",
  "screenshots": [],
  "server": {
    "type": "node",
    "entry_point": "",
    "mcp_config": {
      "command": "npx",
      "args": [
        "-y",
        "@gongrzhe/quickchart-mcp-server"
      ],
      "env": {}
    }
  },
  "tools": [
    {
      "name": "generate_chart",
      "description": "Generate a chart using QuickChart",
      "inputSchema": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Chart type (bar, line, pie, doughnut, radar, polarArea, scatter, bubble, radialGauge, speedometer)"
          },
          "labels": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Labels for data points"
          },
          "datasets": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "label": {
                  "type": "string"
                },
                "data": {
                  "type": "array"
                },
                "backgroundColor": {
                  "oneOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "borderColor": {
                  "oneOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "additionalConfig": {
                  "type": "object"
                }
              },
              "required": [
                "data"
              ]
            }
          },
          "title": {
            "type": "string"
          },
          "options": {
            "type": "object"
          }
        },
        "required": [
          "type",
          "datasets"
        ]
      }
    },
    {
      "name": "download_chart",
      "description": "Download a chart image to a local file",
      "inputSchema": {
        "type": "object",
        "properties": {
          "config": {
            "type": "object",
            "description": "Chart configuration object"
          },
          "outputPath": {
            "type": "string",
            "description": "Path where the chart image should be saved"
          }
        },
        "required": [
          "config",
          "outputPath"
        ]
      }
    }
  ],
  "prompts": [
    {
      "name": "Basic bar chart",
      "description": "Generate a bar chart using Chart.js configuration.",
      "text": "{\"type\":\"bar\",\"data\":{\"labels\":[\"January\",\"February\",\"March\"],\"datasets\":[{\"label\":\"Sales\",\"data\":[65,59,80],\"backgroundColor\":\"rgb(75,192,192)\"}]},\"options\":{\"title\":{\"display\":true,\"text\":\"Monthly Sales\"}}}"
    }
  ],
  "tools_generated": true,
  "keywords": [
    "Media Creation",
    "data visualization",
    "chart generation",
    "quickchart"
  ],
  "license": "MIT",
  "user_config": {
    "client": {
      "type": "number",
      "description": "Specifies the client type for which the QuickChart Server is installed. In this case, it's for Claude.",
      "sensitive": false,
      "title": "client",
      "required": true
    }
  }
}