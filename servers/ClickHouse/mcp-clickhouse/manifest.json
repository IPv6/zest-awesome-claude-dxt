{
  "dxt_version": "0.1",
  "name": "mcp-clickhouse",
  "display_name": "ClickHouse MCP Server",
  "version": "1.0.0",
  "description": "An MCP server for ClickHouse.",
  "long_description": "",
  "author": {
    "name": "ClickHouse"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ClickHouse/mcp-clickhouse"
  },
  "homepage": "https://glama.ai/mcp/servers/yvjy4csvo1",
  "screenshots": [],
  "server": {
    "type": "python",
    "entry_point": "",
    "mcp_config": {
      "command": "uv",
      "args": [
        "run",
        "--with",
        "mcp-clickhouse",
        "--python",
        "3.13",
        "mcp-clickhouse"
      ],
      "env": {
        "CLICKHOUSE_HOST": "<clickhouse-host>",
        "CLICKHOUSE_PORT": "<clickhouse-port>",
        "CLICKHOUSE_USER": "<clickhouse-user>",
        "CLICKHOUSE_PASSWORD": "<clickhouse-password>",
        "CLICKHOUSE_SECURE": "true",
        "CLICKHOUSE_VERIFY": "true",
        "CLICKHOUSE_CONNECT_TIMEOUT": "30",
        "CLICKHOUSE_SEND_RECEIVE_TIMEOUT": "30"
      }
    }
  },
  "tools": [
    {
      "name": "list_databases",
      "description": "List available ClickHouse databases",
      "inputSchema": {
        "properties": {},
        "title": "list_databasesArguments",
        "type": "object"
      }
    },
    {
      "name": "list_tables",
      "description": "List available ClickHouse tables in a database",
      "inputSchema": {
        "properties": {
          "database": {
            "title": "Database",
            "type": "string"
          },
          "like": {
            "default": null,
            "title": "Like",
            "type": "string"
          }
        },
        "required": [
          "database"
        ],
        "title": "list_tablesArguments",
        "type": "object"
      }
    },
    {
      "name": "run_select_query",
      "description": "Run a SELECT query in a ClickHouse database",
      "inputSchema": {
        "properties": {
          "query": {
            "title": "Query",
            "type": "string"
          }
        },
        "required": [
          "query"
        ],
        "title": "run_select_queryArguments",
        "type": "object"
      }
    }
  ],
  "prompts": [
    {
      "name": "Run a SQL query",
      "description": "Execute a SQL query on your ClickHouse cluster",
      "text": "Run this SQL query: SELECT * FROM system.databases LIMIT 5"
    },
    {
      "name": "List databases",
      "description": "List all databases on your ClickHouse cluster",
      "text": "List all databases in my ClickHouse instance"
    },
    {
      "name": "List tables",
      "description": "List all tables in a specific database",
      "text": "Show me all tables in the system database"
    }
  ],
  "tools_generated": true,
  "keywords": [
    "clickhouse",
    "sql",
    "Databases",
    "database"
  ],
  "license": "[NOT GIVEN]",
  "user_config": {
    "CLICKHOUSE_HOST": {
      "type": "string",
      "description": "The hostname of your ClickHouse server",
      "sensitive": false,
      "title": "CLICKHOUSE_HOST",
      "required": true
    },
    "CLICKHOUSE_USER": {
      "type": "number",
      "description": "The username for authentication",
      "sensitive": false,
      "title": "CLICKHOUSE_USER",
      "required": true
    },
    "CLICKHOUSE_PASSWORD": {
      "type": "string",
      "description": "The password for authentication",
      "sensitive": false,
      "title": "CLICKHOUSE_PASSWORD",
      "required": true
    },
    "CLICKHOUSE_PORT": {
      "type": "number",
      "description": "The port number of your ClickHouse server",
      "sensitive": false,
      "title": "CLICKHOUSE_PORT",
      "required": false
    },
    "CLICKHOUSE_SECURE": {
      "type": "boolean",
      "description": "Enable/disable HTTPS connection",
      "sensitive": false,
      "title": "CLICKHOUSE_SECURE",
      "required": false
    },
    "CLICKHOUSE_VERIFY": {
      "type": "boolean",
      "description": "Enable/disable SSL certificate verification",
      "sensitive": false,
      "title": "CLICKHOUSE_VERIFY",
      "required": false
    },
    "CLICKHOUSE_CONNECT_TIMEOUT": {
      "type": "number",
      "description": "Connection timeout in seconds",
      "sensitive": false,
      "title": "CLICKHOUSE_CONNECT_TIMEOUT",
      "required": false
    },
    "CLICKHOUSE_SEND_RECEIVE_TIMEOUT": {
      "type": "number",
      "description": "Send/receive timeout in seconds",
      "sensitive": false,
      "title": "CLICKHOUSE_SEND_RECEIVE_TIMEOUT",
      "required": false
    },
    "CLICKHOUSE_DATABASE": {
      "type": "string",
      "description": "Default database to use",
      "sensitive": false,
      "title": "CLICKHOUSE_DATABASE",
      "required": false
    }
  }
}