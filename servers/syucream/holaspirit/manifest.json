      "description": "List all tasks in the organization",
      "inputSchema": {
        "type": "object",
        "properties": {
          "organizationId": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-]+$",
            "description": "Unique identifier for the organization"
          },
          "page": {
            "type": "number",
            "minimum": 1,
            "description": "Page number"
